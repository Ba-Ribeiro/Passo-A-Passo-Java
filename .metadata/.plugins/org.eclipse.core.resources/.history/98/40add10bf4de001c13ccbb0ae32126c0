package br.com.entra21.PassoAPasso.Java.Incremento.Decremento;

public class main {

	public static void main(String[] args) {
			
		//Incremento e Decremento;
		// São operadores especiais que utilizamos para aumentar ou diminuir um valor armazenado em uma variavel em 1 unidade.
		// São usados para que o codigo seja mais legivel.
		
		//Incremento = aumenta o valor da variavel em 1 unidade 
		// x++
		// x=10
		// 10 + 1 = 11
		
		//Decremento = diminui o valor da variavel em 1 unidade
		// x = 20 
		// x -- 
		// 20 - 1 = 19
		
		//Pós fixo x ++ = x+1
		//	 x-- = x-1
		
		//No pós fixos dentro de uma operação que envolva a variavel que sera incrementada  (x++ / x--). O valor original da variavel é tilizado e só depois será realizado o incremento dela
		
		//Pré fixo (++x / --x)
		// Nesse caso acontece que a variavel vai ser crementada ou decrementada primeiro e esse valor incrementado ou decrementado será utilizado na expressão onde a variavel se encontra.
		
		
		//Tem uma diferença do incremento e decremento dependendo da posição que você coloca os operadores.
		
		//Os operadores são utilizados para substituir essas expressões x++  = x= x+1 onde x recebe x + 1 e a mesma coisa para x--
	
		// a++ é um atalho para adiciona +1 ao valor já existente na variavel a. logo
		// ficaria 1+10=11
		
		int a = 10;
		int b = a++;

		System.out.println(a);
		System.out.println(b);
		
		// Pós
		a =11; //pq foi adicionado 1 na variavel a
		b = 10; //b obteve o valor de a quando a ainda tinha o valor de 10.
		
		int c = 10;
		int d = ++c;

		System.out.println(c);
		System.out.println(d);
		
		// Pré
		c
		d
}
}